<Window x:Class="ASILab6.DialogGroup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить группу" Height="300" Width="300">
    <StackPanel Margin="5">
        <StackPanel Orientation="Horizontal">
            <TextBlock Margin="0,0,5,0">Имя группы: </TextBlock>
            <TextBox Name="groupName" Width="120"/>
        </StackPanel>
        <GroupBox Header="Студенты">
            <ListBox Height="100"/>
        </GroupBox>
        <Button HorizontalAlignment="Center" Margin="0,0,0,15" Width="150" Click="AddStudent_Click">Добавить студента</Button>
        <Button HorizontalAlignment="Center" Margin="0,0,0,5" Width="100">Сохранить</Button>
        <Button HorizontalAlignment="Center" Width="100" Click="Cancel_Click">Отменить</Button>
    </StackPanel>
</Window>
