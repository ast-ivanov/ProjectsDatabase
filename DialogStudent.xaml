<Window x:Class="ASILab6.DialogStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ASILab6"
        Title="Добавить студента" Height="300" Width="300">
    <StackPanel Margin="5">
        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
            <TextBlock Width="100">Группа:</TextBlock>
            <TextBlock Width="150" Text="{Binding SelectedGroup.GroupName}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
            <TextBlock Width="100">Фамилия: </TextBlock>
            <TextBox Name="nameBox" Width="150"/>
        </StackPanel>
        <Button HorizontalAlignment="Center" Width="100" Margin="0,20,0,5" Click="Save_Click">Добавить</Button>
        <Button HorizontalAlignment="Center" Width="100" Click="Cancel_Click">Отменить</Button>
    </StackPanel>
</Window>
